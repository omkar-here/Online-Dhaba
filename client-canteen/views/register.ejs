<!DOCTYPE html>
<html lang="en">

	<head>
		<title>Sign Up</title>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">		
		
		<!--Bootstrap CSS-->
		<link rel="stylesheet" type="text/css" href="/vendor/bootstrap/css/bootstrap.min.css">
		<!--CSS-->
		<link rel="stylesheet" type="text/css" href="/css/util.css">
        <link rel="stylesheet" type="text/css" href="/css/sign-in-up-contact.css">
        <!-- Bootstrap CSS -->
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <!-- Font Awesome -->
       <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
	</head>

	<body style="background-color: #666666;">
		<div class="limiter">
			<div class="container-sign-in-up">
				<div class="wrap-sign-in-up">
					
                    <form action="/users/register" class="sign-in-up-form" method="POST">
                        
						<span class="sign-in-up-form-title p-b-43">
							Sign Up
						</span>
                        <% include ./partials/messages %>
						<label for="name" class="form-group">Name</label>
						<div class="wrap-input100">
                            <input class="input100" 
                            type="text" 
                            id="name" 
                            name="name" 
                            aria-describedby="name-format" 
                            required aria-required=”true” 
                            pattern="[A-Za-z-0-9]+\s[A-Za-z-'0-9]+" 
                            title="Format: FirstName LastName" 
                            placeholder="Enter your name"
                            value="<%= typeof name != 'undefined' ? name : '' %>"
                            />
						</div>

						<label for="email" class="form-group">Email</label>
						<div class="wrap-input100">
                            <input class="input100" 
                            type="email" 
                            id="email" 
                            name="email" 
                            aria-describedby="email-format" 
                            required aria-required=”true” 
                            title="Example: ex@abc.xyz" 
                            placeholder="Enter your email"
                            value="<%= typeof email != 'undefined' ? email : '' %>"
                            />
						</div>
						
						<label for="password" class="form-group">Password</label>
						<div class="wrap-input100">
                            <input class="input100" 
                            type="password" 
                            id="password" 
                            name="password" 
                            aria-describedby="password-format" 
                            required aria-required=”true” 
                            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" 
                            title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" 
                            placeholder="Enter password"
                            value="<%= typeof password != 'undefined' ? password : '' %>"
                            />
						</div>

						<label for="password2" class="form-group">Password</label>
						<div class="wrap-input100">
                            <input class="input100" 
                            type="password" 
                            id="password2" 
                            name="password2" 
                            aria-describedby="password-format" 
                            required aria-required=”true” 
                            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" 
                            title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" 
                            placeholder="Enter password"
                            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                            />
						</div>
						<br>

						<label for="designation" class="form-group">Designation</label>
						<div id="designation">
							<input type="radio" name="collapse" checked="checked" value="student"> Student</input>
							<input type="radio" name="collapse" value="teachingStaff"> Teaching Staff</input>
							<input type="radio" name="collapse" value="nonteachingStaff"> Non-teaching Staff</input>
							
							<div id="student" class="desc">
								<br>
								
								<label for="rollno" class="form-group">Roll No</label>
								<div class="wrap-input100">
                                    <input class="input100" 
                                    type="number" 
                                    id="rollno" 
                                    name="rollno" 
                                    aria-describedby="rollno-format" 
                                    required aria-required=”true” 
                                    min="0" 
                                    max="9999" 
                                    title="Enter roll no." 
                                    placeholder="Enter roll no."
                                    />
								</div>
								
								<label for="branch" class="form-group">Branch</label>
								<div class="input-group mb-3">
									<select class="custom-select form-group" name="branch1" id="branch">
										<option selected value="1">COMP</option>
									  	<option value="2">IT</option>
										<option value="3">ELEX</option>
										<option value="4">PROD</option>
									</select> 
								</div>
								
								<label for="year" class="form-group">Year</label>
								<div class="input-group mb-3">
									<select class="custom-select form-group" name="year" id="year">
										<option selected value="1">F.E.</option>
									  	<option value="2">S.E.</option>
										<option value="3">T.E.</option>
										<option value="4">B.E.</option>
									</select> 
								</div>
							</div>
							
							<div id="teachingStaff" class="desc" style="display: none;">
								<br>
								
								<label for="branch" class="form-group">Branch</label>
								<div class="input-group mb-3">
									<select class="custom-select form-group" name="branch2" id="branch">
										<option selected value="1">COMP</option>
											<option value="2">IT</option>
										<option value="3">ELEX</option>
										<option value="4">PROD</option>
									</select>
								</div>
								
								<label for="type" class="form-group">Role</label>
								<div class="input-group mb-3">
									<select class="custom-select form-group" name="role1" id="role">
										<option selected value="1">Assistant Professor</option>
											<option value="2">Professor</option>
										<option value="3">H.O.D.</option>
										<option value="4">B.E.</option>
									</select> 
								</div>
							</div>
							
							<div id="nonteachingStaff" class="desc" style="display: none;">
								<br>
								
								<label for="type" class="form-group">Role</label>
								<div class="input-group mb-3">
									<select class="custom-select form-group" name="role2" id="role">
										<option selected value="1">Lab Assistant</option>
										<option value="2">Peon</option>
									</select> 
								</div>
							</div>
						</div>

						<div class="g-recaptcha" data-sitekey="6LdZJ7wUAAAAAF_0rQrzXkCmZWWpxHShPHyJbXlx">
						</div>
						<br>
						<div class="container-sign-in-up-form-btn">
							<button type="submit" class="sign-in-up-form-btn">Sign Up</button>
						</div>
						
						<div class="text-center p-t-20 p-b-20">
							<span class="txt2">Already have an account?</span>
						</div>

						<div class="container-sign-in-up-form-btn">
							<a class="sign-in-up-form-btn" href="/users/login" roles="button">Sign In</a>
						</div>
					</form>

					<div class="sign-in-up-more" style="background-image: url('/images/bg-02.jpg');"></div>
				</div>
			</div>
		</div>

		<!--jquery JS-->
		<script src="/vendor/jquery/jquery-3.4.1.min.js"></script>
		<!--Collapse JS-->
		<script src="/js/collapse.js"></script>
		<!--Google reCaptcha JS-->
        <script src='https://www.google.com/recaptcha/api.js'></script>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
	</body>

</html>