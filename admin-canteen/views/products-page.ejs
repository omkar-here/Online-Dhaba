                    <i class="fas fa-align-left"></i>
                </button>
            </div>
        </nav>
        <div class="col">
              <div class="row">
              <% for(let i = 0; i < products.length; i++) { %>
                  <div class="col-12 col-md-6 col-lg-4">
                      <div class="card">
                          <img class="card-img-top" src="<%= products[i].imagePath %>" alt="Card image cap">
                          <div class="card-body">
                              <h4 class="card-title"><a href=""><%= products[i].title %>&nbsp;</a>
                                <% if(products[i].foodtype == "Non-Veg") { %>
                                    <img src="https://img.icons8.com/color/30/000000/non-vegetarian-food-symbol.png">
                                <% } else if (products[i].foodtype == "Veg") { %>
