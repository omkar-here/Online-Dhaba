                              <div class="row">
                                      <div class="col-6">
                                              &#x20b9 <%= products[i].price %>
                                      </div>
                                      <div class="col-3">
                                        <a href="/edit/<%= products[i].id %>" id="admin-go-btn" class="btn btn-primary btn-lg btn-block"><i class="fas fa-edit"></i></a>
                                        
                                </div>
                                <div class="col-3">
                                        <a href="/delete/<%= products[i].id %>" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                                </div>

                                      
                              </div>
                              
                          </div>
                      </div>
                  </div>
                  <% } %>

              </div>
          </div>
  
