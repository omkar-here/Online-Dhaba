<div class="col-sm-6 col-md-4">

  <% include ./partials/messages %>
  <form action="/admins/register" class="shadow-lg p-4 text-black" method="POST">
   <div class="form-group">
         <label for="name" class="pl-2 font-weight-bold">Name</label>
         <input
           type="name"
           id="name"
           name="name"
           class="form-control"
           placeholder="Enter Name"
           value="<%= typeof name != 'undefined' ? name : '' %>"
         />
       </div>
       <div class="form-group">
         <label for="email" class="pl-2 font-weight-bold">Email</label>
         <input
           type="email"
           id="email"
           name="email"
           class="form-control"
           placeholder="Enter Email"
           value="<%= typeof email != 'undefined' ? email : '' %>"
         />
       </div>
       <div class="form-group">
         <label for="password" class="pl-2 font-weight-bold">Password</label>
         <input
           type="password"
           id="password"
           name="password"
           class="form-control"
           placeholder="Create Password"
           value="<%= typeof password != 'undefined' ? password : '' %>"
         />
       </div>
       <div class="form-group">
         <label for="password2" class="pl-2 font-weight-bold">Confirm Password</label>
         <input
           type="password"
           id="password2"
           name="password2"
           class="form-control"
           placeholder="Confirm Password"
           value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
         />
       </div>
     <button type="submit" class="btn btn-outline-primary mt-3 btn-block shadow-sm font-weight-bold">Register</button>
  </form>
  <p class="lead mt-4">
        <b>Have An Account?  <a class="text-primary" href="/admins/login">Login</a></b>
  </p>
</div>
